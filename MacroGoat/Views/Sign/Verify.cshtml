@using MacroGoat.Services
@inject GHelperService hlp
@{ 
    var mgsettings = hlp.MgSettings;
}

<div class="row">
    <div class="col-12">


        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-info-circle mr-3"></i>Info</h6>
            </div>
            <div class="card-body">
                Upload an office file to check its signautre, if any.
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" id="checker" action="@mgsettings.ApiSettings.VerifyURL.Value">

                <div class="card shadow h-100">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary"> Select Office File for Verifying</h6>
                    </div>
                    <div class="card-body">
                        <input name="OfficeFile" class="form-control-file" type="file" />
                        <button type="submit" class="btn btn-success btn-icon-split mt-5">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text">Verify File</span>
                        </button>
                    </div>
                </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card shadow h-100">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"> Result</h6>
            </div>
            <div class="card-body">
                <div class="font-weight-light font-italic">
                    Result will be shown here.
                </div>
                
            </div>
        </div>
    </div>
</div>






@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

@model List<ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage Roles for User";
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User <b> @ViewBag.UserName </b>
        </div>
        <div class="card-body">
            @for (var i = 0; i < Model.Count; i++)
            {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].Role" />
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="checkbox" asp-for="@Model[i].Selected"  />
                <label class="form-check-label">@Model[i].Role</label>
            </div>
            }
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"
                       style="width:auto" />
                <a asp-action="Index" class="btn btn-primary" style="width:auto">Cancel</a>
            </div>
        </div>
    </div>
</form>

